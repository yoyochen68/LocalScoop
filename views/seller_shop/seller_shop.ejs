<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="icon" type="image/x-icon" href="/logo/localscooplogo2.png">
  <link rel="stylesheet" href="../../styles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

  <title>Sellers shop</title>

</head>
<body>

<!--  HEADER-->
<header class="fixed_header">
  <!--Back button-->

  <nav class="nav-wrapper seller-shop">
    <div class="nav-wrapper--left seller-shop">
      <a onclick="history.back()"><span class="material-icons nav-icon">arrow_back</span></a>
    </div>
    <div class="nav-wrapper--right seller-shop">

      <a href="/chat/store"><span class="material-icons nav-icon seller-shop">mode_comment</span></a>
      <a href="#"><span class="material-icons nav-icon seller-shop">share</span></a>
      <a href="#"><span class="material-icons nav-icon seller-shop">settings</span></a>
    </div>
  </nav>

</header>
<main class="seller-shop-body">
  <div class="top_space"></div>


  <!--THE CAROUSEL -->

  <div class="slideshow-container">

    <% for (let storeImage of storeImages) { %>
    <div class="mySlides fade">
      <div class="numbertext"><%=storeImages.indexOf(storeImage)+1 %> / <%=storeImages.length %></div>
      <img src=<%=storeImage%> class="carousel_image">
    </div>
    <%  }; %>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>



  <!--    DESCRIPTION-->
  <div class="store_info">
    <p><%= storeInfo.store_address %></p>
    <h2><%= storeInfo.store_name %></h2>
    <h4>
      <span class="material-icons">star_outline</span>
      <%= storeInfo.rating %>
    </h4>

    <h3>About us</h3>
    <p> <%= storeInfo.description%> </p>
    <h4><%= storeInfo.followers %> Followers</h4>
    <div class=" btn-container center">
      <button class="yellow-bn xs-bn" style="width:30%" >Edit Shop </button>
      <button class="yellow-bn xs-bn"  style="width:30%">Share Shop </button>
     <a href="/logout"> <button class="logout-bn center xs-bn " style="width:100%" >Log Out </button></a>

    </div>
    <hr>

  </div>



  <!--THE GRID PART -->
  <!--https://stackoverflow.com/questions/65649642/square-css-grid-with-square-images-->

  <div class="seller_grid">

    <% productInfo.forEach(product => { %>
    <div class="seller_grid_item">
      <img alt="" class="seller_grid_image" src="<%=product.image_file_paths %>">
      <p><%=product.image_file_paths %></p>
    </div>
    <%  }); %>

  </div>



  <!--    YOU HAVE TO MAKE IT SHOW IMAGES BASED ON THEIR PRODUCT ID -->

  <div class="bottom_space"></div>


  <footer>
    <%- include('../elements/seller_footer.ejs',{page:"seller_shop"}) %>
  </footer>

</main>

<script>

  let slideIndex = 1;
  showSlides(slideIndex);

  // Next/previous controls
  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  // Thumbnail image controls
  function currentSlide(n) {
    showSlides(slideIndex = n);
  }


  function showSlides(n) {
    let i;
    let slides = document.getElementsByClassName("mySlides");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }

    slides[slideIndex-1].style.display = "block";
  }
</script>
</body>
</html>